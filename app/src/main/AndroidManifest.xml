<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.promoapp">

    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/iconeapp"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".apresentacao.promocao.TelaOferta"
            android:label="@string/title_promocao_detail"
            android:parentActivityName=".apresentacao.promocao.TelaOferta"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.github.promoapp.apresentacao.promocao.TelaOferta" />
        </activity>
        <activity
            android:name=".apresentacao.anuncio.AnuncioListActivity"
            android:label="@string/title_anuncio_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".apresentacao.anuncio.AnuncioDetailActivity"
            android:label="@string/title_anuncio_detail"
            android:parentActivityName=".apresentacao.anuncio.AnuncioListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.github.promoapp.apresentacao.anuncio.AnuncioListActivity" />
        </activity>

        <meta-data
            android:name="com.google.android.nearby.messages.API_KEY"
            android:value="AIzaSyDKSlVWDKx5HI-r2GSl3NlI7HCgfdNDQsk" />

        <activity android:name=".apresentacao.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".apresentacao.inicio.TelaInicial" />
    </application>

</manifest>